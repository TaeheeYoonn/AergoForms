<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%logger{30}:%line - %msg%n</pattern>
		</encoder>
	</appender>
	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
	<logger name="ch.qos.logback" level="ERROR"></logger>

	<logger name="io.blocko" level="INFO"></logger>

	<logger name="org.springframework" level="WARN"></logger>
	<logger name="org.springframework.boot.web.embedded.tomcat"
		level="WARN"></logger>
	<logger name="org.springframework.web.servlet.resource" level="DEBUG"></logger>
	<logger name="org.thymeleaf" level="WARN"></logger>
	<logger name="nz.net.ultraq.thymeleaf" level="WARN"></logger>
</configuration>